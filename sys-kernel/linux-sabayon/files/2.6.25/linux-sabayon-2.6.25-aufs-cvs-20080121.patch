+static int hin_iigen(struct inode *inode)
+{
+	LKTRTrace("i%lu\n", inode->i_ino);
+
+	if (inode->i_ino != AUFS_ROOT_INO)
+		au_iigen_dec(inode);
+	else
+		AuWarn("branch root dir was changed\n");
+	return 0;
