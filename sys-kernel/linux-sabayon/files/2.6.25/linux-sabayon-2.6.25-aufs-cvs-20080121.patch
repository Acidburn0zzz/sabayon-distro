+		err = vfsub_rename(h_dir, h_dentry, h_dir, tmp_dentry, &vargs);
+		//if (LktrCond) err = -1; //unavailable
+		AuTraceErr(err);
+		dput(tmp_dentry);
+	}
+
+	AuTraceErr(err);
+	return err;
