+
+void file_move(struct file *file, struct list_head *list)
+{
+	if (!list)
+		return;
+	file_list_lock();
+	list_move(&file->f_u.fu_list, list);
+	file_list_unlock();
+}
+
+void file_kill(struct file *file)
+{
+	if (!list_empty(&file->f_u.fu_list)) {
+		file_list_lock();
+		list_del_init(&file->f_u.fu_list);
+		file_list_unlock();
+	}
