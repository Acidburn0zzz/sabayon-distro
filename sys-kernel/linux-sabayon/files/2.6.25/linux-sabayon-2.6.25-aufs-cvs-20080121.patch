+	AuTraceEnter();
+	SiMustWriteLock(sb);
+
+	sbinfo = stosi(sb);
+	while (1) {
+		br_id = ++sbinfo->si_last_br_id;
+		if (br_id && find_brindex(sb, br_id) < 0)
+			return br_id;
+	}
+}
