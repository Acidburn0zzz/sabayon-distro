+/* xino for each branch */
+static void xino_clear_br(struct super_block *sb)
+{
+	aufs_bindex_t bindex, bend;
+	struct aufs_branch *br;
+
+	AuTraceEnter();
+	SiMustWriteLock(sb);
+
+	bend = sbend(sb);
+	for (bindex = 0; bindex <= bend; bindex++) {
+		br = stobr(sb, bindex);
+		if (unlikely(!br || !br->br_xino))
+			continue;
+
+		fput(br->br_xino);
+		br->br_xino = NULL;
+	}
+}
