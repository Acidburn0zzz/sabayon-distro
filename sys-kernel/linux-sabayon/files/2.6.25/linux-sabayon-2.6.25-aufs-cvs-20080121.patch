+			if (waitqueue_active(&pipe->wait))
+				wake_up_interruptible(&pipe->wait);
+			kill_fasync(&pipe->fasync_readers, SIGIO, POLL_IN);
+		}
+	}
+
+	while (page_nr < spd_pages)
+		page_cache_release(spd->pages[page_nr++]);
+
+	return ret;
+}
