+			b43err(wl, "Resume failed at core start\n");
+			goto out;
+		}
+	}
+	b43dbg(wl, "Device resumed.\n");
+ out:
+	wldev->suspend_in_progress = false;
+	mutex_unlock(&wl->mutex);
+	return err;
