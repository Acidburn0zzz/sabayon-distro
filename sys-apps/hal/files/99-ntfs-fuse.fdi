<?xml version="1.0" encoding="ISO-8859-1"?> <!-- -*- SGML -*- -->
 
<deviceinfo version="0.2">
 
<!-- Mount NTFS drives with ntfs-fuse -->
<device>
  <match key="volume.fstype" string="ntfs">
    <merge key="volume.policy.mount_filesystem" type="strlist">ntfs-fuse</merge>
  </match>
</device>
</deviceinfo> 
